<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_com_card_view_content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_four"
    android:elevation="@dimen/elevation_ten"
    card_view:cardCornerRadius="@dimen/radius_two">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/material_com_card_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Festival Name"
            android:id="@+id/txtFestName"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:shadowColor="@color/primaryDark"
            android:paddingLeft="5dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:background="#9f1d5c74"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location, World"
            android:id="@+id/txtLocation"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:background="#9f000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rating"
            android:id="@+id/txtRating"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#9f1d5c74"
            android:textColor="@android:color/white"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="03/04/2015"
            android:id="@+id/txtSubDate"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="@color/primary"
            android:paddingRight="5dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:background="#9f000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="5dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>